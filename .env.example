# Waystone MUD Configuration
# Copy this file to .env and customize

# Server Settings
WAYSTONE_HOST=0.0.0.0
WAYSTONE_TELNET_PORT=4000
WAYSTONE_WEBSOCKET_PORT=4001
WAYSTONE_DEBUG=true

# Database (SQLite for budget mode)
# For SQLite: sqlite+aiosqlite:///./data/waystone.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost/waystone
DATABASE_URL=sqlite+aiosqlite:///./data/waystone.db

# Session Settings
SESSION_SECRET=change-me-in-production-use-random-string
SESSION_TIMEOUT_MINUTES=60

# Game Settings
STARTING_ROOM_ID=university_main_gates
MAX_CONNECTIONS_PER_IP=5
COMMAND_RATE_LIMIT_PER_SECOND=10

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console
